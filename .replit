modules = ["nodejs-20", "python-3.11", "web"]
run = "npm run dev"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"
packages = ["cargo", "libiconv", "libxcrypt", "rustc"]

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "npm run dev"]

[[deployment.rewrites]]
from = "/*"
to = "/index.html"

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Build & Start App"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Start Python Server"
author = 42069639
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python python_server/run.py"

[[workflows.workflow]]
name = "Build & Start App"
author = 42069639
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm install && npm run build && cd .. && pip install python-jose python-dotenv opensearch-py && python python_server/run.py"
